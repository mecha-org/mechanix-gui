  power_options:
    shutdown:
      icon: /usr/share/mechanix/shell/launcher/assets/icons/shutdown_icon.png
    restart:
      icon: /usr/share/mechanix/shell/launcher/assets/icons/restart_icon.png
  terminal:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/terminal_icon.png
    run_command: ["sh", "-c", "alacritty --working-directory=/home/ironman"]
app_list:
  include_only:
    - chromium web browser
    - firefox web browser
  exclude:
  include:
