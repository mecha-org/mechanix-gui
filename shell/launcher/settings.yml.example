      landscape: /usr/share/mechanix/shell/launcher/assets/icons/rotation/landscape_icon.png
  power:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/power_icon.png
  lock:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/lock_icon.png
    min_time_long_press: 1
  settings:
    icon:
      default: /usr/share/mechanix/shell/launcher/assets/icons/settings_icon.png
  search:
