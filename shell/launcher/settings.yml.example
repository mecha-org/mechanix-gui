title: Launcher # Empty
app:
  id: mechanix.shell.launcher #launcher
  text_multithreading: true # false
  antialiasing: true # false
  try_opengles_first: true # false
window:
  size: [480, 480] # [1024, 768]
  position: [0, 0] # [0, 0]
  min_size: [480, 40] # None
  max_size: null # None
  visible: true # true
  resizable: true # true
  decorations: true # true
  transparent: true # false
  always_on_top: false # false
  icon_path: null # Todo
layout:
  left: []
  center: []
  right: []
fonts:
  paths:
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceMono-Bold.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceMono-BoldItalic.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceMono-Italic.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceMono-Regular.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceGrotesk-Bold.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceGrotesk-Regular.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceGrotesk-SemiBold.ttf
    - /usr/share/mechanix/shell/launcher/assets/fonts/SpaceGrotesk-Medium.ttf
modules:
  background:
    icon:
      default:
  apps:
    - app_id: mecha-connect
      name: Mecha Connect
      icon: /usr/share/mechanix/shell/launcher/assets/icons/apps/mecha_connect_icon.png
      run_command:
        [
          "sh",
          "-c",
          "MECHA_CONNECT_APP_SETTINGS_PATH=/etc/mecha/connect/settings-demo.yml mecha-connect",
        ]
    - app_id: chromium
      name: Chromium
      icon: /usr/share/mechanix/shell/launcher/assets/icons/apps/chromium_icon.png
      run_command:
        [
          "sh",
          "-c",
          "chromium --user-agent='Mozilla/5.0 (Linux; Android 14) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.6099.43 Mobile Safari/537.36' --ozone-platform=wayland chrome://gpu",
        ]
    - app_id: firefox
      name: firefox
      icon: /usr/share/mechanix/shell/launcher/assets/icons/apps/firefox_icon.png
      run_command: ["sh", "-c", firefox-esr]
  clock:
    format: "%H:%M" # https://docs.rs/chrono/latest/chrono/format/strftime/index.html
  bluetooth:
    icon:
      sm:
        on: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/sm/bluetooth_on_icon.png
        off: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/sm/bluetooth_off_icon.png
        connected: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/sm/bluetooth_connected_icon.png
        not_found: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/sm/bluetooth_not_found_icon.png
      lg:
        on: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/lg/bluetooth_on_icon.png
        off: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/lg/bluetooth_off_icon.png
        connected: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/lg/bluetooth_connected_icon.png
        not_found: /usr/share/mechanix/shell/launcher/assets/icons/bluetooth/lg/bluetooth_not_found_icon.png
  wireless:
    icon:
      sm:
        off: /usr/share/mechanix/shell/launcher/assets/icons/wireless/sm/wireless_off_icon.png
        on: /usr/share/mechanix/shell/launcher/assets/icons/wireless/sm/wireless_on_icon.png
        low: /usr/share/mechanix/shell/launcher/assets/icons/wireless/sm/wireless_low_icon.png
