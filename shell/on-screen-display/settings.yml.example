title: OnScreenDisplay # Empty
app:
  id: mechanix.shell.on-screen-display #on screen display
  text_multithreading: true # false
  antialiasing: true # false
  try_opengles_first: true # false
window:
  size: [480, 480] # [1024, 768]
  position: [0, 0] # [0, 0]
  min_size: [480, 40] # None
  max_size: null # None
  visible: true # true
  resizable: true # true
  decorations: true # true
  transparent: true # false
  always_on_top: false # false
  icon_path: null # Todo
layout:
  left: []
  center: []
  right: []
fonts:
  paths:
    - /usr/share/mechanix/shell/on-screen-display/assets/fonts/SpaceMono-Bold.ttf
    - /usr/share/mechanix/shell/on-screen-display/assets/fonts/SpaceMono-BoldItalic.ttf
    - /usr/share/mechanix/shell/on-screen-display/assets/fonts/SpaceMono-Italic.ttf
    - /usr/share/mechanix/shell/on-screen-display/assets/fonts/SpaceMono-Regular.ttf
    - /usr/share/mechanix/shell/on-screen-display/assets/fonts/SpaceGrotesk-Bold.ttf
    - /usr/share/mechanix/shell/on-screen-display/assets/assets/fonts/SpaceGrotesk-Regular.ttf
modules:
  background:
    icon:
      default: /usr/share/mechanix/shell/on-screen-display/assets/icons/mecha_background_color.png
  apps:
    - app_id: mecha-connect
      name: Mecha Connect
      icon: /usr/share/mechanix/shell/on-screen-display/assets/icons/apps/mecha_connect_icon.png
      run_command:
        [
          "sh",
          "-c",
          "MECHA_CONNECT_APP_SETTINGS_PATH=/etc/mecha/connect/settings-demo.yml mecha-connect",
        ]
    - app_id: chromium
      name: Chromium
      icon: /usr/share/mechanix/shell/on-screen-display/assets/icons/apps/chromium_icon.png
      run_command:
        [
          "sh",
          "-c",
          "chromium --user-agent='Mozilla/5.0 (Linux; Android 14) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.6099.43 Mobile Safari/537.36' --ozone-platform=wayland chrome://gpu",
        ]
    - app_id: firefox
      name: firefox
      icon: /usr/share/mechanix/shell/on-screen-display/assets/icons/apps/firefox_icon.png
      run_command: ["sh", "-c", firefox-esr]
  clock:
    format: "%k:%M" # https://docs.rs/chrono/latest/chrono/format/strftime/index.html
  bluetooth:
    icon:
      on: /usr/share/mechanix/shell/on-screen-display/assets/icons/bluetooth/bluetooth_on_icon.svg
      off: /usr/share/mechanix/shell/on-screen-display/assets/icons/bluetooth/bluetooth_off_icon.svg
      connected: /usr/share/mechanix/shell/on-screen-display/assets/icons/bluetooth/bluetooth_connected_icon.svg
      not_found: /usr/share/mechanix/shell/on-screen-display/assets/icons/bluetooth/bluetooth_not_found_icon.svg
  wireless:
    icon:
      off: /usr/share/mechanix/shell/on-screen-display/assets/icons/wireless/wireless_off_icon.svg
      on: /usr/share/mechanix/shell/on-screen-display/assets/icons/wireless/wireless_on_icon.svg
      low: /usr/share/mechanix/shell/on-screen-display/assets/icons/wireless/wireless_low_icon.svg
      weak: /usr/share/mechanix/shell/on-screen-display/assets/icons/wireless/wireless_weak_icon.svg
      good: /usr/share/mechanix/shell/on-screen-display/assets/icons/wireless/wireless_good_icon.svg
