      level_90: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_90.svg
      level_80: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_80.svg
      level_70: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_70.svg
      level_60: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_60.svg
      level_50: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_50.svg
      level_40: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_40.svg
      level_30: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_30.svg
      level_20: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/battery/battery_20.svg
