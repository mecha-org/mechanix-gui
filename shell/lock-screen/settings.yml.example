title: Lock Screen # Empty
app:
  id: lock-screen # lock-screen
  text_multithreading: true # false
  antialiasing: true # false
  try_opengles_first: true # false
window:
  size: [480, 480] # [1024, 768]
  position: [0, 0] # [0, 0]
  min_size: [480, 100] # None
  max_size: null # None
  visible: true # true
  resizable: true # true
  decorations: true # true
  transparent: true # false
  always_on_top: false # false
  icon_path: null # Todo
fonts:
  "SpaceGrotesk-Bold": "/usr/share/mechanix/shell/lock-screen/assets/fonts/SpaceGrotesk-Bold.ttf"
  "SpaceGrotesk-Light": "/usr/share/mechanix/shell/lock-screen/assets/fonts/SpaceGrotesk-Light.ttf"
  "SpaceGrotesk-Medium": "/usr/share/mechanix/shell/lock-screen/assets/fonts/SpaceGrotesk-Medium.ttf"
  "SpaceGrotesk-Regular": "/usr/share/mechanix/shell/lock-screen/assets/fonts/SpaceGrotesk-Regular.ttf"
  "SpaceGrotesk-SemiBold": "/usr/share/mechanix/shell/lock-screen/assets/fonts/SpaceGrotesk-SemiBold.ttf"
layout:
  grid: ["1", "2", "3", "4", "5", "6", "7", "8", "Home", "9", "0", "Back Space"]
modules:
  home:
    title: "Home"
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/pngs/home.png
  back_space:
    title: "Back Space"
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/backspace.svg
  password_configs:
    keys_allowed: ["1", "2", "3", "4", "5", "6", "7", "8", "9", "0"]
    password_length: 4
  back:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/back.svg
  lock:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/lock.svg
  unlock:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/unlock.svg
  background:
    icon:
      default: /usr/share/mechanix/shell/lock-screen/assets/icons/mecha-background-grayscale.png
  clock:
    format: "%I:%M %p" # https://docs.rs/chrono/latest/chrono/format/strftime/index.html
  bluetooth:
    icon:
      on: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_on.svg
      off: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_off.svg
      connected: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_connected.svg
      not_found: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/bluetooth/bluetooth_not_found.svg
  wireless:
    icon:
      off: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_off.svg
      on: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_on.svg
      low: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_low.svg
      weak: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_weak.svg
      good: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_good.svg
      strong: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_strong.svg
      not_found: /usr/share/mechanix/shell/lock-screen/assets/icons/status-bar/wireless/wireless_not_found.svg
